{
  "name": "mascopy-electron",
  "version": "1.0.0",
  "description": "照片/视频 NAS 上传工具 - Electron版本",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --dev",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "photo",
    "video",
    "nas",
    "upload",
    "media",
    "organizer"
  ],
  "author": "MasCopy Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "exif-parser": "^0.1.12",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.mascopy.electron",
    "productName": "MasCopy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.photography"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}