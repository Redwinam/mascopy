{
  "name": "mascopy-electron",
  "version": "2.0.1",
  "description": "照片/视频 NAS 上传工具 - Electron版本",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "start-dev": "electron . --dev",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "photo",
    "video",
    "nas",
    "upload",
    "media",
    "organizer"
  ],
  "author": "MasCopy Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "exif-parser": "^0.1.12",
    "exiftool-vendored": "^30.3.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.33.5"
  },
  "optionalDependencies": {
    "@img/sharp-libvips-darwin-arm64": "^1.0.4"
  },
  "build": {
    "appId": "com.mascopy.electron",
    "productName": "MasCopy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "mascopy.icns",
      "node_modules/sharp/**/*",
      "node_modules/@img/sharp-libvips-*/**/*",
      "node_modules/@img/sharp-darwin-arm64/**/*"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/sharp-libvips-*/**/*",
      "node_modules/@img/sharp-darwin-arm64/**/*"
    ],
    "mac": {
      "icon": "mascopy.icns",
      "category": "public.app-category.photography",
      "target": "dmg"
    },
    "dmg": {
      "title": "MasCopy Installer",
      "icon": "mascopy.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 420
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
